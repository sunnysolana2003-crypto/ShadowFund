# SHADOW-FUND Backend Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================================================
# Solana Configuration
# ============================================================================

# Solana RPC URL
# For development (free, rate-limited):
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# For production (recommended - use paid RPC for better reliability):
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Or: https://rpc.ankr.com/solana/YOUR_API_KEY
# Or: https://solana-api.projectserum.com

# For testing on devnet:
# SOLANA_RPC_URL=https://api.devnet.solana.com

# ============================================================================
# Wallet Configuration
# ============================================================================

# Server wallet private key (base64 encoded)
# Generate one with: npx ts-node scripts/generate-wallet.ts
# IMPORTANT: Never commit this to git! Keep it secret!
# Leave empty for demo mode (simulated transactions)
SERVER_WALLET_SECRET=

# ============================================================================
# AI Configuration (Gemini)
# ============================================================================

# Google Gemini API Key for AI strategy generation
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# ============================================================================
# App Configuration
# ============================================================================

# Environment (development, production)
NODE_ENV=development

# API Port
PORT=3001

# ============================================================================
# ShadowWire (ZK Privacy Layer)
# ============================================================================

# Cluster: mainnet-beta or devnet
SHADOWWIRE_CLUSTER=mainnet-beta

# ShadowWire API key (for relayer; optional in mock mode)
# SHADOWWIRE_API_KEY=

# true = in-memory mock (demo/devnet); false = real ShadowWire SDK (production)
SHADOWWIRE_MOCK=true

# RADR Labs shielded token mints (optional; fallbacks used if unset)
# Growth uses SOL, RADR, ORE, ANON. Degen uses SOL, BONK, RADR, JIM, POKI.
# See RADR_SUPPORTED_TOKENS in backend/lib/protocols/types.ts for full list.
# RADR_MINT=
# ORE_MINT=
# ANON_MINT=
# JIM_MINT=
# POKI_MINT=

# Non-logging policy: never log wallets, amounts, balances, signatures, addresses.
# Set LOG_POLICY=minimal or NON_LOGGING_POLICY=true to enforce (also auto in production).
# LOG_POLICY=minimal
# NON_LOGGING_POLICY=true

# ============================================================================
# CORS (Production)
# ============================================================================

# Comma-separated allowed origins (e.g. https://yourapp.vercel.app)
# Leave empty in dev for *; set in production to your frontend origin(s)
# CORS_ORIGINS=https://yourapp.vercel.app

# ============================================================================
# Kamino (Yield Vault)
# ============================================================================

# Path to keypair file or private key JSON for Kamino deposits/withdrawals.
# Yield vault uses this wallet for Kamino; fund it with USD1 for real lending.
# KAMINO_WALLET_KEYPAIR_PATH=
# KAMINO_WALLET_PRIVATE_KEY=

# ============================================================================
# Feature Flags
# ============================================================================

# Enable real on-chain transactions (requires SERVER_WALLET_SECRET and SOL)
# Set to 'true' only when ready for production
ENABLE_REAL_TRANSACTIONS=false

# Enable detailed logging
DEBUG=false

# ============================================================================
# Security (Production Only)
# ============================================================================

# Maximum transaction amount in USD (safety limit)
MAX_TRANSACTION_AMOUNT=10000

# Require user signature for all transactions
REQUIRE_USER_SIGNATURE=true

# ============================================================================
# Rate Limiting
# ============================================================================

# Max API requests per minute per IP (in-memory; use Redis for multi-instance)
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Monitoring (Optional)
# ============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=

# DataDog API key for monitoring
# DATADOG_API_KEY=
