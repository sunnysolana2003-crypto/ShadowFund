{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install && node scripts/patch-shadowwire.mjs",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "node_modules/@radr/shadowwire/wasm/**"
    }
  },
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
